<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.he.dao.TeacherMapper">

    <!--动态参数搜索信息-->
    <select id="getTeacher">
        select * from teacher where 1=1
        <if test="id >0">
            and id >0
        </if>
        <if test="name !=null">
            and name =#{name}
        </if>
    </select>
</mapper>